#!/usr/bin/env bash

export XDG_LOG_HOME="${XDG_LOG_HOME:-"$HOME/.local/log"}"
export XDG_STATE_HOME="${XDG_STATE_HOME:-"$HOME/.local/state"}"
export XDG_CONFIG_HOME="${XDG_CONFIG_HOME:-"$HOME/.config"}"
export XDG_DATA_HOME="${XDG_DATA_HOME:-"$HOME/.local/share"}"
export XDG_CACHE_HOME="${XDG_CACHE_HOME:-"$HOME/.cache"}"

export TESTNVIM_LOG_DIR="${TESTNVIM_LOG_DIR:-"$XDG_LOG_HOME/$TESTNVIM_APPNAME"}"
export TESTNVIM_STATE_DIR="${TESTNVIM_STATE_DIR:-"$XDG_STATE_HOME/$TESTNVIM_APPNAME"}"
export TESTNVIM_CONFIG_DIR="${TESTNVIM_CONFIG_DIR:-"$XDG_CONFIG_HOME/$TESTNVIM_APPNAME"}"
export TESTNVIM_DATA_DIR="${TESTNVIM_DATA_DIR:-"$XDG_DATA_HOME/$TESTNVIM_APPNAME"}"
export TESTNVIM_CACHE_DIR="${TESTNVIM_CACHE_DIR:-"$XDG_CACHE_HOME/$TESTNVIM_APPNAME"}"

export TESTNVIM_LOG_PROFILE="${TESTNVIM_LOG_PROFILE:-"${TESTNVIM_LOG_DIR}/${TESTNVIM_USER_PROFILE}"}"
export TESTNVIM_CONFIG_PROFILE="${TESTNVIM_CONFIG_PROFILE:-"${TESTNVIM_CONFIG_DIR}/${TESTNVIM_USER_PROFILE}"}"
export TESTNVIM_DATA_PROFILE="${TESTNVIM_DATA_PROFILE:-"${TESTNVIM_DATA_DIR}/${TESTNVIM_USER_PROFILE}"}"
export TESTNVIM_CACHE_PROFILE="${TESTNVIM_CACHE_PROFILE:-"${TESTNVIM_CACHE_DIR}/${TESTNVIM_USER_PROFILE}"}"
